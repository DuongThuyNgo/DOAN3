@{
    ViewBag.Title = "Lớp Học";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


@section Scripts{
    <script src="~/Scripts/Controller/LopHoc.js"></script>
}

<div ng-app="AppStudentManagement" ng-controller="LopHocCtrl">
    <!-- Page header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title" style="padding:5px 5px 5px 5px">
                <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold"> Quản lý khối học</span> </h4>
                <ul class="breadcrumb breadcrumb-caret position-right">
                    <li class="active">Chức năng</li>
                    <li class="active">Quản lý danh sách lớp học</li>
                </ul>
            </div>
            <div class="heading-elements">
                <div class="heading-btn-group">
                    <a data-toggle="modal" href='#modal-id' class="btn btn-success has-text text-size-small btn-add">
                        <i class="fa fa-fw fa-plus fa-2-1x"></i>
                        <span>Thêm mới</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Main -->
    <div class="page-container">
        <div class="row">

            <div class="panel panel-flat">
                <div class="panel-heading" style="padding-top:10px; padding-bottom:10px">
                    <h6 class="panel-title">DANH SÁCH LỚP HỌC</h6>

                </div>
                <div class="container-fluid">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Mã lớp học</th>
                                    <th>Tên lớp học</th>
                                    <th>Mã khối học</th>
                                    <th>Mã giáo viên</th>
                                    <th>Sĩ số</th>
                                    <th style="text-align:center">Nghiệp vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in listLopHoc">
                                    <td>{{item.Malop}}</td>
                                    <td>{{item.Tenlop}}</td>
                                    <td>{{item.Makhoihoc}}</td>
                                    <td>{{item.Magiaovien}}</td>
                                    <td>{{item.Siso}}</td>
                                    <td class="text-center">
                                        <ul class="icons-list action">
                                            <li class="text-primary-600"><a data-toggle="modal" href="#modal-id"><i data-item="{{item.Malop}}" class="icon-pencil7 btn-update"></i></a></li>
                                            <li class="text-danger-600"><a href="#"><i data-item="{{item.Malop}}" class="icon-trash btn-delete"></i></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div style="padding-top: 10px; padding-bottom:10px; text-align:center">
                            <dir-pagination-controls max-size="PageSize" direction-links="true" boundary-links="true"
                                                     on-page-change="GetKhoiHoc()">
                            </dir-pagination-controls>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Main -->
            @Html.Partial("Modal/_LopHoc")
        </div>
    </div>
</div>

